{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "irisnet coin registry",
  "type": "array",
  "items": {
    "$ref": "#/definitions/coin_info"
  },
  "minItems": 1,
  "uniqueItems": true,
  "$definitions": {
    "coin_info": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "string",
          "description": "platform"
        },
        "denom": {
          "type": "string",
          "description": "denom"
        },
        "symbol": {
          "type": "string",
          "description": "coin symbol"
        },
        "scale": {
          "type": "integer",
          "description": "coin scale"
        },
        "description": {
          "type": "string",
          "description": "coin description"
        },
        "coin_id": {
          "type": "string",
          "description": "CoinGecko id"
        },
        "protocol": {
          "type": "string",
          "enum": [
            "native",
            "gateway",
            "hashlock",
            "ibc",
            "bridge"
          ]
        },
        "in_path": {
          "type": "string",
          "description": "the destnation chain path of coin ibc transfer in. example:\"transfer/channel-29\""
        },
        "traces": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/trace"
          },
          "default": [
          ]
        }
      },
      "required": [
        "platform",
        "denom",
        "coin_id",
        "description",
        "symbol",
        "scale",
        "protocol"
      ]
    },
    "trace": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "string",
          "description": "platform"
        },
        "denom": {
          "type": "string",
          "description": "denom"
        },
        "out_path": {
          "type": "string",
          "description": "the destnation chain path of coin ibc transfer in. example:\"transfer/channel-47\""
        }
      }
    }
  }
}